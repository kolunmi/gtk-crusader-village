<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="am.kolunmi.GtkCrusaderVillage" path="/am/kolunmi/GtkCrusaderVillage/" gettext-domain="gtk-crusader-village">
    <key name="sourcehold-python-installation" type="s">
      <default>"@python@"</default>
      <summary>Sourcehold Python Installation</summary>
      <description>The location of the python executable whose installation includes the sourcehold module</description>
    </key>
    <key name="show-startup-greeting" type="b">
      <default>true</default>
      <summary>Show Startup Greeting</summary>
      <description>Whether to show the greeting dialog on application startup</description>
    </key>
    <key name="theme" type="s">
      <choices>
        <choice value="shc-default"/>
        <choice value="shc-light"/>
        <choice value="shc-dark"/>
        <choice value="default"/>
        <choice value="light"/>
        <choice value="dark"/>
      </choices>
      <default>'shc-default'</default>
      <summary>The application GUI theme</summary>
      <description>Use a light or dark variant of GTK. 'default' will attempt to read OS settings on supported platforms.</description>
    </key>
    <key name="show-grid" type="b">
      <default>true</default>
      <summary>Show Grid</summary>
      <description>Whether to show a grid in the map editor</description>
    </key>
    <key name="background-image" type="s">
      <default>""</default>
      <summary>Background Image</summary>
      <description>A path to an image file to use as a background texture.</description>
    </key>
    <key name="show-gradient" type="b">
      <default>false</default>
      <summary>Show Gradient</summary>
      <description>Whether to show a radial gradient in the map editor, visually indicating how far a tile is from the center</description>
    </key>
    <key name="show-cursor-glow" type="b">
      <default>false</default>
      <summary>Show Cursor Glow</summary>
      <description>Whether to show a glow around the currently hovered tile in the map editor</description>
    </key>
    <key name="image-brushes" type="as">
      <default>[]</default>
      <summary>Image Brushes</summary>
      <description>A list of paths to user-registered image files to use as brushes</description>
    </key>
    <key name="item-frequencies" type="a{sv}">
      <default>{}</default>
      <summary>Item Frequencies</summary>
      <description>A dictionary mapping item resources to the number of times they have been used in the editor</description>
    </key>
  </schema>
</schemalist>
